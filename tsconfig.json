{
    "compilerOptions": {
        "target": "es5",
        "lib": ["dom", "dom.iterable", "esnext"],
        "allowJs": true,
        "skipLibCheck": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noEmit": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "module": "esnext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "incremental": true,
        "baseUrl": ".",
        "paths": {
            "@/components/*": ["components/*"],
            "@/templates/*": ["templates/*"],
            "@/styles/*": ["styles/*"],
            "@/utils/*": ["utils/*"],
            "@/hooks/*": ["hooks/*"],
            "@/types/*": ["types/*"],
            "@/constants/*": ["constants/*"],
            "@/mocks/*": ["mocks/*"],
            "@/config/*": ["config/*"],
            "@/lib/*": ["lib/*"],
            "@/pages/*": ["pages/*"],
            "@/public/*": ["public/*"]
        }
    },
    "include": ["src", "next-env.d.ts", "**/*.ts", "**/*.tsx", "util/checkBalance.js"],
    "exclude": ["node_modules"]
}
